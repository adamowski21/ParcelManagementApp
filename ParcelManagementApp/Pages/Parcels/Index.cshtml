@page
@model ParcelManagementApp.Pages.Parcels.IndexModel

@{
    ViewData["Title"] = "Parcels";
}

<h1>Parcels</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Price</th>
            <th>Address</th>
            <th>Supplier</th>
            <th>Status</th>
            <th>Location</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var parcel in Model.Parcels)
        {
            <tr>
                <td>@parcel.Name</td>
                <td>@parcel.Size</td>
                <td>@parcel.Price</td>
                <td>@parcel.Address</td>
                <td>@parcel.Supplier</td>
                <td>@parcel.Status</td>
                <td>@parcel.Location</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@parcel.Id">Edit</a> |
                    <a asp-page="Details" asp-route-id="@parcel.Id">Details</a> |
                    <a asp-page="Delete" asp-route-id="@parcel.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
