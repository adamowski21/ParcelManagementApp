@page
@model ParcelManagementApp.Pages.Parcels.EditModel

@{
    ViewData["Title"] = "Edit Parcel";
}

<h1>Edit Parcel</h1>

<h4>Parcel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Parcel.Id" />
            <div class="form-group">
                <label asp-for="Parcel.Status" class="control-label"></label>
                <input asp-for="Parcel.Status" class="form-control" />
                <span asp-validation-for="Parcel.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parcel.Location" class="control-label"></label>
                <input asp-for="Parcel.Location" class="form-control" />
                <span asp-validation-for="Parcel.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}