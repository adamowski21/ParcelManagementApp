@page
@model ParcelManagementApp.Pages.Parcels.CreateModel
@using ParcelManagementApp.Models

@{
    ViewData["Title"] = "Create Parcel";
}

<h1>Create Parcel</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page="./Create">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Parcel.Name" class="control-label d-block">Name:</label>
                <input asp-for="Parcel.Name" class="form-control" placeholder="Enter parcel name" />
                <span asp-validation-for="Parcel.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Parcel.Size" class="control-label d-block">Size:</label>
                <select asp-for="Parcel.Size" class="form-control">
                    <option value="S">Small (&lt; 500g)</option>
                    <option value="M">Medium (&lt; 1000g)</option>
                    <option value="L">Large (&gt;= 1000g)</option>
                </select>
                <span asp-validation-for="Parcel.Size" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Parcel.Address" class="control-label d-block">Address:</label>
                <input asp-for="Parcel.Address" class="form-control" placeholder="Enter delivery address" />
                <span asp-validation-for="Parcel.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Parcel.Supplier" class="control-label d-block">Supplier:</label>
                <select asp-for="Parcel.Supplier" class="form-control">
                    <option value="Courier">Courier</option>
                    <option value="PostOffice">Post Office</option>
                </select>
                <span asp-validation-for="Parcel.Supplier" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/" class="btn btn-link">Back to Home</a>
</div>

@if (TempData["ParcelName"] != null)
{
    <h4>Parcel Created Successfully:</h4>
    <p><strong>Name:</strong> @TempData["ParcelName"]</p>
    <p><strong>Status:</strong> @TempData["ParcelStatus"]</p>
    <p><strong>Location:</strong> @TempData["ParcelLocation"]</p>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
